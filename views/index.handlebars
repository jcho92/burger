

	<div class="center">
		<div class="BurgerList box">


			
			<h2>Burgers ready!</h2>

			<ul>
				{{#each burgers}}
				{{#unless devoured}}
				<li>
					{{!-- {{this.id}} --}}

					{{> burger/burger-block}}

				</li>
				{{/unless}}
				{{/each}}
			</ul>

		</div>

		<div class="devoured">

			<h2>Burgers that have been devoured</h2>
			<ul>
				{{#each burgers}}
				{{#if this.devoured}}

				<li>

					{{burger}}

				</li>
				{{/if}}
				{{/each}}
			</ul>


		</div>
	</div>


	


</div>